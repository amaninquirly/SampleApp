<div class="supplier-show">
	
	<%= form_for @account do |f| %>
	<% if @account.errors.any? %>
	<ul class="Signup_Errors">
		<% for mesg in @account.errors.full_messages %>
		<li> *<%= mesg %> </li>
		<% end %>
	</ul>
	<% end %>
	<div class="supplier-drop-down" >
		<%= collection_select :account, :supplier_id, Supplier.all, :id, :name%><br/>
		<div class="txt-field">
			<%= f.text_field :account_number,class:'text-field',autofocus: true, placeholder: 'account number' %>	
		</div></br>
		<div class="supplier-btn-submit">
			<%= f.submit :Save %>
		</div>
	</div> 
	<% end %>
</div>